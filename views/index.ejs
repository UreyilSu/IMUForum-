    <!-- Welcome Section -->
    <div class="welcome-section">
      <h1>Hoş Geldiniz!</h1>
      <p>İlginizi çeken konuları keşfedin ve topluluğa katılın</p>
    </div>

    <!-- Admin Panel Button -->
    <% if (currentUser && currentUser.isAdmin) { %>
      <div style="text-align: center;">
        <a href="/admin" class="admin-panel-btn">🔧 Admin Paneli</a>
